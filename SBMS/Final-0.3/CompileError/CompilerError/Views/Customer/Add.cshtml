                    <td>@Html.ValidationMessageFor(c => c.LoyalityPoint)</td>
                </tr>

                <tr>
                    <td></td>
                    <td><input type='submit' name='Add' value="save" style='color:green'></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h3>
                                <b>
                                    @ViewBag.Message
                                </b>
                            </h3>
                        }

                    </td>
                </tr>
                <tr></tr>


            </table>


        </form>
    </div>
 </div>

    <div style="height:100px; width:100px"></div>
