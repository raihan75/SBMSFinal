@using CompileError.Model.Model
@model CompileError.Models.PurchaseModelView
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_KLayout.cshtml";
}


@* ..Main Section.. *@
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">Search Product</h2>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @*@Html.LabelFor(c => c.Code)*@
                @Html.TextBoxFor(c => c.BillNo, new { @class = "form-control", placeholder = "Enter text here" })
            </div>

            <input type="submit" value="Search" class="btn-lg btn-primary" />
        }
    </div>
</div>

<div>
    @{
        Html.RenderPartial("Purchase/_PurchaseDetails",Model);
    }
</div>


